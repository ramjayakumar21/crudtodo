    <h2> Added Task </h2>
      <% for(var i = 0; i < todoList.length; i++){ %>
    <li><input type="checkbox" name="check" value="<%= todoList[i] %>" /> <%= todoList[i].title %> </li>
    <% } %>
      <button formaction="/removetask" type="submit"> Remove </button>
  </form>
  <h2> Completed task </h2>
  </div>
</body>
</html>